---
// src/layouts/Layout.astro
import '../styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  userRole?: string; // Añadir userRole como prop opcional
}

const { title, userRole } = Astro.props;
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerPolicy="no-referrer"
    />

    <!-- Estilos personalizados (pueden coexistir con Tailwind) -->
    <style is:global>
      .hero-gradient {
        background-image: linear-gradient(
            135deg,
            rgba(84, 86, 101, 0.85),
            rgba(36, 89, 235, 0.85)
          ),
          url('https://images.unsplash.com/photo-1554147090-e1221a04a025?q=80&w=2070&auto=format&fit=crop');

        background-size: cover;
        background-position: center center;
        background-blend-mode: multiply;

        /* Añadimos una altura mínima para la prueba */
        min-height: 400px;
      }

      .card-hover-effect {
        transition:
          transform 0.3s ease-in-out,
          box-shadow 0.3s ease-in-out;
      }
      .card-hover-effect:hover {
        transform: translateY(-8px);
        box-shadow:
          0 20px 25px -5px rgb(0 0 0 / 0.2),
          0 8px 10px -6px rgb(0 0 0 / 0.2);
      }
      .loader {
        border: 4px solid #113358;
        border-radius: 50%;
        border-top: 4px solid #4a6dde;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 2rem auto;
      }
      .desktop-nav {
        --green: #031108; /* Un tono de color borgoña/vino */
        display: flex;
        gap: 2rem; /* Espacio entre los enlaces */
        padding: 1rem;
        background-color: #f0f0f0;
        border-radius: 8px;
      }
      /* Estilos para enlaces de navegación de escritorio */
      .desktop-nav .nav-link {
        position: relative;
        transition: color 0.3s ease;
      }
      .desktop-nav .nav-link::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -4px;
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--blue);
        transition: width 0.3s ease;
      }
      .desktop-nav .nav-link.active,
      .desktop-nav .nav-link:hover {
        color: var(--orange);
      }
      .desktop-nav .nav-link.active::after,
      .desktop-nav .nav-link:hover::after {
        width: 100%;
      }

      /* Estilos para enlaces de navegación móvil */
      #mobile-menu .nav-link {
        display: block;
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        font-weight: 500;
        color: var(--medium-gray);
        transition:
          background-color 0.3s,
          color 0.3s;
      }
      #mobile-menu .nav-link:hover {
        background-color: #f3f4f6; /* gray-100 */
        color: var(--dark-orange);
      }
      #mobile-menu .nav-link.active {
        background-color: var(--orange);
        color: white;
      }

      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <body class="bg-backblue text-gray-300 font-sans">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
